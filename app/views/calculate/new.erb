<h2 class="title abel">CopyCat Gaming</h2>
<!-- A Level 10 Warrior using an Axe with the following stats:
- 50-65 DMG, 20 STR, 10% Fire Damage -->

<div class="panel panel-info">
  <div class="panel-heading">Fill out this form</div>
  <div class="panel-body">
    <form id="main-form" action="/calculate" method="post">

      <label for="weapon">Choose Your Warrior</label>
      <select class="form-control" name="warrior">
        <option>Lena</option>
        <option>Conan</option>
      </select>

      <div class="form-group">
        <label for="level">Warrior Level (1-90)</label>
        <input type="text" class="form-control" name="level" placeholder="Level">
      </div>

      <label for="weapon">Choose Your Weapon</label>
      <select class="form-control" name="weapon">
        <option>Axe</option>
        <option>Sword</option>
        <option>Mace</option>
      </select>

      <label for="weapon-stats">Weapon Stats</label>
      <div class="weapon-details">
        <div class="form-group">
          <input type="text" class="form-control" name="min_damage" placeholder="Minimum Damage">
        </div>

        <div class="form-group">
          <input type="text" class="form-control" name="max_damage" placeholder="Maximum Damage">
        </div>

        <div class="form-group">
          <input type="text" class="form-control" name="str_modifier" placeholder="STR">
        </div>
      </div>

      <label for="min-damage">Choose Element Type</label>
      <select class="form-control" name="element_type">
        <option>fire</option>
        <option>physical</option>
        <option>cold</option>
        <option>none</option>
      </select>

      <div class="form-group">
        <label for="element_boost_percent">Weapon's Element Boost Percent</label>
        <input type="text" class="form-control" name="element_boost_percent" placeholder="Boost Percentage">
      </div>

      <button type="submit" class="btn btn-default">Go!</button>
    </form>
  </div>
</div>

<div id="results">

</div>
</div>
